source 'https://rubygems.org'

# Latest Ruby
ruby '2.3.0'

# Web server
gem 'puma'

# Simple HTTP
gem 'sinatra', require: false

# Faster ERB
gem 'erubis'

# Asset pipeline
gem 'sprockets'

# Use the right host
gem 'rack-canonical-host'

# Stylesheet
gem 'sass'
gem 'sprockets-sass'
gem 'bourbon'

group :development do
  # Automatic reloading
  gem 'shotgun'
end
